USE master
GO

BACKUP DATABASE [G3P] TO DISK = 'D:\Backup\G3P.bak' WITH COMPRESSION
GO

BACKUP LOG [G3P] TO DISK = 'D:\ Backup\G3P.trn' WITH COMPRESSION
GO



USE master
GO

RESTORE DATABASE [G3P] FROM DISK = 'D:\Backup\G3P.bak' WITH NORECOVERY
GO

RESTORE LOG [G3P] FROM DISK = 'D:\Backup\G3P.trn' WITH NORECOVERY
GO

USE master

ALTER AVAILABILITY GROUP [AZG3PQA] JOIN WITH (CLUSTER_TYPE = NONE);

GO
USE master
GO

ALTER DATABASE [G3P] SET HADR AVAILABILITY GROUP = [AZG3PQA];
GO  
